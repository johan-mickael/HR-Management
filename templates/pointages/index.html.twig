{% extends 'base.html.twig' %}
{% block title %}Pointages
{% endblock %}
{% block styles %}
	<!-- summernote -->
	<link rel="stylesheet" href="{{asset('plugins/summernote/summernote-bs4.min.css')}}">
{% endblock %}
{% block header %}
	Pointages
{% endblock %}
{% block body %}
	<!-- Main content -->
	<section class="content">
		<div class="row">
			{{ include('pointages/sidebar.html.twig') }}
			<div class="col-md-9">

				<div class="card card-primary card-outline">
					<div class="card-header">
						<h3 class="card-title">Liste des pointages journalier</h3>
					</div>
					<!-- /.card-header -->
					<div class="card-body p-0">
						<table class="table table-bordered table-striped">
							<thead>
								<tr>
									<th style="width: 10px">#</th>
									<th>Date</th>
									<th>Heure DÃ©but</th>
									<th>Heure Fin</th>
									<th>Justification</th>
									<th>Commentaire</th>
									<th>Statut</th>
								</tr>
							</thead>
							<tbody>
								{# Mondestin// display all user's checks #}
								{% set no = 0 %}
								{% for check in checks %}
									<tr>
										<td>
											{% set no = no + 1 %}
											{{ no}}
										</td>
										<td>{{ check.getPointingDate ? check.getPointingDate|date('d-m-Y') : '' }}</td>
										<td>{{ check.getStartTime ? check.getStartTime|date('H:i:s') : '' }}</td>
										<td>{{ check.getEndTime ? check.getEndTime|date('H:i:s') : '' }}</td>
										<td>
											{{ check.justify }}
										</td>
										<td>
											{{ check.comments }}
										</td>

										<td>
											<span class="badge bg-warning">{{ check.validate }}</span>
										</td>
									</tr>
								{% else %}
									<tr>
										<td class="text-center" colspan="7">Pas de pointages disponible</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
			<!-- /.col -->
		</div>
		<!-- /.row -->
	</section>
	<!-- /.content -->
